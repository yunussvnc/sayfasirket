// Prisma Schema - Veritabanı şeması
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // Supabase için direct connection (migration'lar için - opsiyonel, gerekirse aktif edin)
}

// Admin Kullanıcıları
model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hash'lenmiş şifre
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Sayfalar
model Page {
  id          String   @id @default(cuid())
  title       String
  path        String   @unique
  slug        String   @unique
  content     String?  @db.Text
  type        String   @default("page") // page, service, etc.
  published   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  seoData     SEOData?
}

// SEO Verileri
model SEOData {
  id              String   @id @default(cuid())
  pageId          String   @unique
  metaTitle       String?
  metaDescription String?  @db.Text
  metaKeywords    String?  @db.Text
  ogTitle         String?
  ogDescription   String?  @db.Text
  ogImage         String?
  canonical       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  page            Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

// Hizmetler
model Service {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  content     String?  @db.Text
  icon        String?
  image       String?
  link        String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Blog/Haber Yazıları
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String   @db.Text
  content     String   @db.Text
  author      String
  category    String
  image       String?
  published   Boolean  @default(false)
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Menü Öğeleri
model MenuItem {
  id        String    @id @default(cuid())
  label     String
  href      String
  order     Int       @default(0)
  parentId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  parent    MenuItem? @relation("MenuHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  MenuItem[] @relation("MenuHierarchy")
}

// Banner/Slider
model SliderItem {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  image       String
  link        String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// İletişim Mesajları
model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([email])
  @@index([read])
}

// Görseller
model Image {
  id         String   @id @default(cuid())
  name       String
  url        String
  path       String?
  category   String   // slider, service, team, background, icon
  size       Int?     // bytes
  width      Int?
  height     Int?
  uploadedAt DateTime @default(now())
  
  @@index([category])
}

// Site Ayarları
model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  type      String   @default("string") // string, json, number, boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

