// Prisma Schema - Veritabanı şeması
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// Admin Kullanıcıları
enum ContentStatus {
  draft
  review
  scheduled
  published
  archived
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  email     String?  @unique
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Sayfalar
model Page {
  id          String         @id @default(uuid())
  title       String
  path        String         @unique
  slug        String         @unique
  summary     String?
  blocks      Json?
  meta        Json?
  type        String         @default("page")
  status      ContentStatus  @default(draft)
  publishedAt DateTime?
  order       Int            @default(0)
  createdBy   String?
  updatedBy   String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  seoData     SEOData?
  @@index([status])
  @@index([publishedAt])
}

// SEO Verileri
model SEOData {
  id              String   @id @default(uuid())
  pageId          String   @unique
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  ogTitle         String?
  ogDescription   String?
  ogImage         String?
  canonical       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  page            Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

// Hizmetler
model Service {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String
  content     String?
  icon        String?
  image       String?
  link        String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Blog/Haber Yazıları
model BlogPost {
  id          String         @id @default(uuid())
  title       String
  slug        String         @unique
  excerpt     String
  blocks      Json?
  content     String?
  author      String
  category    String
  tags        String[]
  hero        Json?
  coverImage  String?
  status      ContentStatus  @default(draft)
  publishedAt DateTime?
  meta        Json?
  createdBy   String?
  updatedBy   String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([status])
  @@index([publishedAt])
}

// Menü Öğeleri
model MenuItem {
  id        String    @id @default(uuid())
  label     String
  href      String
  order     Int       @default(0)
  parentId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  parent    MenuItem?  @relation("MenuHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  MenuItem[] @relation("MenuHierarchy")
}

// Banner/Slider
model SliderItem {
  id          String   @id @default(uuid())
  title       String
  description String?
  image       String
  link        String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// İletişim Mesajları
model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([read])
}

// Görseller
model Image {
  id         String         @id @default(uuid())
  name       String
  alt        String?
  url        String
  path       String?
  category   String
  size       Int?
  width      Int?
  height     Int?
  metadata   Json?
  status     ContentStatus  @default(published)
  publishedAt DateTime?
  createdBy  String?
  uploadedAt DateTime       @default(now())

  @@index([category])
  @@index([status])
}

model MediaAsset {
  id          String         @id @default(uuid())
  title       String
  slug        String         @unique
  type        String         @default("image")
  url         String
  alt         String?
  variants    Json?
  tags        String[]
  status      ContentStatus  @default(draft)
  publishedAt DateTime?
  metadata    Json?
  createdBy   String?
  updatedBy   String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([status])
  @@index([publishedAt])
}

// Site Ayarları
model SiteSetting {
  id        String   @id @default(uuid())
  key       String   @unique
  section   String?
  value     Json
  type      String   @default("string")
  status    ContentStatus @default(published)
  publishedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([section])
  @@index([status])
}

model ActivityLog {
  id          String   @id @default(uuid())
  resource    String
  action      String
  recordId    String?
  diff        Json?
  meta        Json?
  performedBy String?
  ip          String?
  userAgent   String?
  createdAt   DateTime @default(now())
}
