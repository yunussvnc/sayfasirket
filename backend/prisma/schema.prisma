// Prisma Schema - Veritabanı şeması
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// Admin Kullanıcıları
model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Sayfalar
model Page {
  id          String   @id @default(uuid())
  title       String
  path        String   @unique
  slug        String   @unique
  content     String?
  type        String   @default("page")
  published   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  seoData     SEOData?
}

// SEO Verileri
model SEOData {
  id              String   @id @default(uuid())
  pageId          String   @unique
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  ogTitle         String?
  ogDescription   String?
  ogImage         String?
  canonical       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  page            Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

// Hizmetler
model Service {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String
  content     String?
  icon        String?
  image       String?
  link        String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Blog/Haber Yazıları
model BlogPost {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String
  author      String
  category    String
  image       String?
  published   Boolean  @default(false)
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Menü Öğeleri
model MenuItem {
  id        String    @id @default(uuid())
  label     String
  href      String
  order     Int       @default(0)
  parentId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  parent    MenuItem?  @relation("MenuHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  MenuItem[] @relation("MenuHierarchy")
}

// Banner/Slider
model SliderItem {
  id          String   @id @default(uuid())
  title       String
  description String?
  image       String
  link        String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// İletişim Mesajları
model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([read])
}

// Görseller
model Image {
  id         String   @id @default(uuid())
  name       String
  url        String
  path       String?
  category   String
  size       Int?
  width      Int?
  height     Int?
  uploadedAt DateTime @default(now())

  @@index([category])
}

// Site Ayarları
model SiteSetting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  type      String   @default("string")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
